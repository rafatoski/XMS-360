---
import AnimatedSection from "./AnimatedSection";

const features = [
    {
        title: "The Core: Custom AI Agents",
        description:
            "We don't just use ChatGPT. We build proprietary agents trained on your business data, local market trends, and 20 years of marketing logic.",
        size: "col-span-1 md:col-span-2 row-span-2",
        icon: "ü§ñ",
        metric: "100% Custom",
        tag: "PROPRIETARY TECH",
    },
    {
        title: "20+ Years",
        description: "Two decades of local dominance on the Treasure Coast.",
        size: "col-span-1",
        icon: "üèÜ",
        metric: "EST. 2004",
        tag: "LEGACY",
    },
    {
        title: "Local DNA",
        description: "Port St. Lucie to Vero Beach. We know your neighbors.",
        size: "col-span-1",
        icon: "üìç",
        metric: "Treasure Coast",
        tag: "EXPERTISE",
    },
    {
        title: "Hyper-Automation",
        description:
            "Automate lead nurture, social posting, and SEO reporting. Reclaim 40+ hours of your week while scaling results.",
        size: "col-span-1 md:col-span-2",
        icon: "‚ö°",
        metric: "85% Efficiency",
        tag: "RESULTS",
    },
    {
        title: "ROI Focused",
        description:
            "Every dollar tracked. Every lead qualified by AI before it hits your inbox.",
        size: "col-span-1",
        icon: "üìà",
        metric: "Data-First",
        tag: "CONVERSION",
    },
];
---

<section
    id="bento"
    class="py-24 md:py-32 bg-[#020617] relative overflow-hidden"
>
    <div class="container mx-auto px-4 max-w-7xl relative z-10">
        <div
            class="mb-20 text-center lg:text-left flex flex-col lg:flex-row items-end gap-8"
        >
            <div class="flex-1">
                <h2
                    class="text-6xl md:text-8xl text-white tracking-tighter mb-6"
                >
                    THE <span class="text-primary italic font-light">360¬∞</span>
                    <br />
                    BENCHMARK.
                </h2>
                <p class="text-2xl text-slate-500 font-light max-w-2xl">
                    A modular ecosystem designed for one thing: aggressive
                    growth through intelligent execution.
                </p>
            </div>
            <div class="hidden lg:block pb-4">
                <div
                    class="w-24 h-24 rounded-full border border-white/10 flex items-center justify-center animate-spin-slow"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-12 h-12 text-primary"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="1.5"
                        ><path
                            d="M12 2v4m0 12v4M4.93 4.93l2.83 2.83m8.48 8.48l2.83 2.83M2 12h4m12 0h4M4.93 19.07l2.83-2.83m8.48-8.48l2.83-2.83"
                        ></path>
                    </svg>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 auto-rows-[250px] gap-6">
            {
                features.map((f, i) => (
                    <AnimatedSection
                        client:visible
                        delay={i * 0.1}
                        className={f.size}
                    >
                        <div class="bento-card group h-full p-8 flex flex-col justify-between hover:border-primary/50 hover:shadow-[0_0_50px_-12px_rgba(14,165,233,0.3)] bg-[#03081a]">
                            <div>
                                <div class="flex justify-between items-start mb-6">
                                    <div class="text-4xl">{f.icon}</div>
                                    <span class="text-[10px] font-black uppercase tracking-[0.3em] text-slate-500 group-hover:text-primary transition-colors">
                                        {f.tag}
                                    </span>
                                </div>
                                <h3 class="text-3xl text-white mb-3 tracking-tight font-black">
                                    {f.title}
                                </h3>
                                <p class="text-lg text-slate-400 font-light leading-relaxed">
                                    {f.description}
                                </p>
                            </div>

                            <div class="pt-6 border-t border-white/5 flex justify-between items-center">
                                <span class="text-2xl font-black text-white italic">
                                    {f.metric}
                                </span>
                                <div class="w-10 h-10 rounded-full border border-white/10 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all group-hover:translate-x-1">
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="w-5 h-5 text-primary"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="3"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                    >
                                        <path d="M5 12h14m-7-7 7 7-7 7" />
                                    </svg>
                                </div>
                            </div>
                        </div>
                    </AnimatedSection>
                ))
            }

            <!-- Special CTA Card -->
            <AnimatedSection
                client:visible
                delay={0.6}
                className="col-span-1 md:col-span-1"
            >
                <div
                    class="bento-card bg-accent p-8 flex flex-col justify-between group cursor-pointer hover:scale-[1.02] transition-transform"
                    onclick="document.getElementById('contact').scrollIntoView({ behavior: 'smooth' })"
                >
                    <div class="text-4xl">üéØ</div>
                    <h3
                        class="text-4xl text-white font-black leading-tight tracking-tighter"
                    >
                        READY TO <br /> EVOLVE?
                    </h3>
                    <div
                        class="flex items-center gap-4 text-white font-black uppercase tracking-widest text-sm"
                    >
                        FREE AUDIT <div class="flex-1 h-px bg-white/30"></div>
                    </div>
                </div>
            </AnimatedSection>
        </div>
    </div>

    <!-- Subtle Background Text -->
    <div
        class="absolute bottom-0 right-0 text-[20vw] font-black text-white/5 leading-none select-none pointer-events-none -mb-10 translate-x-10"
    >
        BENTO
    </div>
</section>

<style>
    @keyframes spin-slow {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360deg);
        }
    }
    .animate-spin-slow {
        animation: spin-slow 12s linear infinite;
    }
</style>
