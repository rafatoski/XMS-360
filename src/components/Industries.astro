---
const industries = [
    "Healthcare & Medical",
    "Real Estate",
    "Legal Services",
    "Home Services",
    "Retail & E-Commerce",
    "Restaurants",
    "Professional Services",
    "Financial Services",
    "Education",
    "Automotive",
];
---

<section id="industries" class="py-24 bg-background border-t border-white/5">
    <div class="container mx-auto px-4">
        <div class="text-center mb-16">
            <h2
                class="text-3xl md:text-4xl font-display font-bold text-white mb-4"
            >
                Built for Your Industry. <br />
                Scaled for Your Ambitions.
            </h2>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-5 gap-4">
            {
                industries.map((ind) => (
                    <div class="p-6 rounded-2xl bg-white/5 border border-white/5 hover:border-accent/50 hover:bg-white/10 transition-all cursor-default text-center group">
                        <span class="text-white/80 font-medium group-hover:text-white transition-colors">
                            {ind}
                        </span>
                    </div>
                ))
            }
        </div>

        <div class="mt-12 text-center">
            <a
                href="#audit"
                class="text-accent hover:text-white transition-colors text-sm font-medium border-b border-accent hover:border-white pb-1"
            >
                Don't see your industry? We likely serve it. â†’ Let's talk
            </a>
        </div>
    </div>
</section>
