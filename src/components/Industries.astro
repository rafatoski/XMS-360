---
import { CheckCircle2 } from "lucide-react";

const industries = [
    "Healthcare & Medical",
    "Real Estate & Development",
    "Legal & Professional Services",
    "Home Services & HVAC",
    "Retail & E-commerce",
    "Hospitality & Restaurants",
    "Technology & SaaS",
    "Finance & Insurance",
    "Education & Training",
    "Manufacturing & Industrial",
    "Automotive",
    "Health & Wellness",
    "Travel & Tourism",
    "Non-Profit & Associations",
    "Consulting & Coaching",
];
---

<section
    class="py-24 md:py-28 bg-black relative overflow-hidden"
    id="industries"
>
    {/* Background Decorative Blob */}
    <div
        class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-blue-500/5 rounded-full blur-[120px] pointer-events-none"
    >
    </div>

    <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-3xl mx-auto text-center mb-16">
            <h2
                class="text-2xl md:text-4xl font-bold font-display text-white mb-6"
            >
                Engineered for Growth Across <br />
                <span class="text-blue-500">Every Major Industry.</span>
            </h2>
            <p class="text-white/60 font-sans text-lg">
                Our AI ecosystem adapts to your specific market dynamics,
                whether you're B2B, B2C, or specialized services.
            </p>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4">
            {
                industries.map((industry) => (
                    <div class="group flex items-center gap-3 p-4 rounded-xl bg-white/5 border border-white/10 backdrop-blur-sm hover:bg-white/10 hover:border-blue-500/30 transition-all duration-300">
                        <CheckCircle2 className="w-5 h-5 text-blue-400 group-hover:text-blue-500 transition-colors shrink-0" />
                        <span class="text-sm font-medium text-white/80 group-hover:text-white transition-colors">
                            {industry}
                        </span>
                    </div>
                ))
            }
        </div>

        <div class="mt-16 text-center">
            <div
                class="inline-flex items-center gap-2 px-6 py-3 rounded-full bg-white/5 border border-white/10 text-white/60 text-sm backdrop-blur-md"
            >
                <span>Don't see your industry?</span>
                <span class="text-blue-400 font-bold"
                    >We tailor our AI to your niche.</span
                >
            </div>
        </div>
    </div>
</section>
