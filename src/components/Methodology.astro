---
const phases = [
    {
        step: "01",
        title: "Deep AI Audit",
        desc: "We run a comprehensive AI-powered analysis of your digital presence, competitors, keyword landscape, and untapped opportunities. No guesswork — only data.",
        badge: "Powered by Semrush + Ahrefs + DeepSeek",
    },
    {
        step: "02",
        title: "Custom Ecosystem Design",
        desc: "We design your personalized 360° marketing ecosystem — selecting the right AI tools, platforms, and strategies calibrated to your industry, goals, and competitive landscape.",
        badge: "20+ Years of Strategic Expertise",
    },
    {
        step: "03",
        title: "Intelligent Activation",
        desc: "We launch your campaigns, systems, and automations across all channels simultaneously. AI agents work 24/7 while our human strategists guide the direction.",
        badge: "Make.com + n8n + Zapier Automations",
    },
    {
        step: "04",
        title: "Continuous AI Learning",
        desc: "Every data point feeds back into the system. Your ecosystem gets smarter every week — improving performance, reducing waste, and uncovering new growth opportunities.",
        badge: "Real-Time AI Performance Intelligence",
    },
];
---

<section id="methodology" class="py-24 bg-black relative">
    <div class="container mx-auto px-4">
        <div class="mb-20 text-center">
            <span
                class="text-accent text-sm font-mono tracking-widest uppercase block mb-4"
                >HOW IT WORKS</span
            >
            <h2 class="text-4xl md:text-5xl font-display font-bold text-white">
                From Data to Dominance: <br />
                <span class="text-white/50">The XMS AI 4-Phase Framework</span>
            </h2>
        </div>

        <div class="relative grid md:grid-cols-4 gap-8">
            <!-- Connection Line (Desktop) -->
            <div
                class="hidden md:block absolute top-[28px] left-0 w-full h-[1px] bg-white/10 z-0"
            >
            </div>

            {
                phases.map((phase, index) => (
                    <div class="relative z-10 group">
                        <div class="w-14 h-14 rounded-full bg-black border border-white/20 text-white font-mono flex items-center justify-center text-xl mb-8 group-hover:border-accent group-hover:text-accent transition-colors shadow-[0_0_20px_-5px_bg-black]">
                            {phase.step}
                        </div>

                        <h3 class="text-xl font-bold text-white font-display mb-4">
                            {phase.title}
                        </h3>
                        <p class="text-muted-foreground mb-6 text-sm leading-relaxed min-h-[80px]">
                            {phase.desc}
                        </p>

                        <div class="inline-block px-3 py-1 rounded bg-white/5 border border-white/5 text-[10px] uppercase tracking-wider text-white/50 group-hover:text-accent group-hover:bg-accent/5 group-hover:border-accent/10 transition-colors">
                            {phase.badge}
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
