---
import { Button } from "./ui/button";
---

<section
  class="relative min-h-screen flex items-center justify-center overflow-hidden bg-[#020617] pt-32 pb-20"
>
  <!-- Anti-Generic Background: Dramatic Lighting -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div
      class="absolute top-[-10%] left-[-10%] w-[60%] h-[60%] bg-primary/20 rounded-full blur-[160px] opacity-40 animate-pulse"
    >
    </div>
    <div
      class="absolute bottom-[-10%] right-[-10%] w-[50%] h-[50%] bg-accent/10 rounded-full blur-[140px] opacity-30"
    >
    </div>

    <!-- Fine Grid for texture -->
    <div
      class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-20 contrast-150 brightness-100"
    >
    </div>
    <div
      class="absolute inset-0 bg-grid-pattern opacity-[0.03] [mask-image:linear-gradient(to_bottom,black,transparent)]"
    >
    </div>
  </div>

  <div class="container relative mx-auto px-4 z-10">
    <div class="max-w-[95rem] mx-auto">
      <!-- Top Label -->
      <div class="flex justify-center mb-12">
        <span
          class="px-5 py-2 rounded-full border border-white/10 glass text-primary text-sm font-black uppercase tracking-[0.2em] animate-fade-in"
        >
          Established 2004 — AI-Augmented 2024
        </span>
      </div>

      <!-- MASSIVE STATEMENT HERO -->
      <div class="text-center relative">
        <h1 class="text-statement text-white mb-8 tracking-[-0.07em]">
          360<span class="text-primary italic font-light">°</span>
          <br />
          <span class="italic font-light opacity-50">Marketing</span>
          <br />
          <span
            class="bg-gradient-to-r from-white via-primary to-accent bg-clip-text text-transparent opacity-90"
            >UNFILTERED.</span
          >
        </h1>

        <!-- Floating Abstract AI element -->
        <div
          class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full h-full -z-10 bg-[radial-gradient(circle,hsl(var(--primary)/0.15)_0%,transparent_70%)] blur-3xl"
        >
        </div>
      </div>

      <!-- Sub-statement & Interaction -->
      <div class="max-w-3xl mx-auto text-center mt-12 space-y-10">
        <p
          class="text-2xl md:text-3xl text-slate-400 font-light leading-snug tracking-tight"
        >
          We strip away the fluff. 20 years of Treasure Coast dominance meet
          custom-trained AI agents to deliver results that actually matter.
        </p>

        <div
          class="flex flex-col sm:flex-row items-center justify-center gap-6"
        >
          <Button
            size="lg"
            className="h-20 px-12 text-xl font-black bg-accent hover:bg-accent/90 text-white rounded-full glow-flare transition-all duration-500 hover:scale-105 group"
            client:load
            onClick={() =>
              document
                .getElementById("contact")
                ?.scrollIntoView({ behavior: "smooth" })}
          >
            CLAIM YOUR FREE AUDIT
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-6 h-6 ml-3 transition-transform group-hover:translate-x-2"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="3"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><path d="M5 12h14m-7-7 7 7-7 7"></path>
            </svg>
          </Button>

          <button
            class="group flex items-center gap-4 text-white text-lg font-black tracking-widest hover:text-primary transition-colors"
            onclick="document.getElementById('bento').scrollIntoView({ behavior: 'smooth' })"
          >
            THE STACK
            <div
              class="w-12 h-12 rounded-full border border-white/20 flex items-center justify-center group-hover:border-primary transition-all"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-5 h-5 transition-transform group-hover:translate-y-1"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="3"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><path d="M12 5v14m-7-7 7 7 7-7"></path>
              </svg>
            </div>
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Decorative Scroll Hint -->
  <div class="absolute bottom-10 left-10 hidden lg:block">
    <div
      class="flex items-center gap-4 text-white/20 font-black tracking-[0.5em] origin-left -rotate-90"
    >
      SCROLL <div class="w-20 h-px bg-white/20"></div>
    </div>
  </div>
</section>

<style>
  .bg-grid-pattern {
    background-image: linear-gradient(
        to right,
        hsl(var(--border) / 0.1) 1px,
        transparent 1px
      ),
      linear-gradient(to bottom, hsl(var(--border) / 0.1) 1px, transparent 1px);
    background-size: 5rem 5rem;
  }
</style>
